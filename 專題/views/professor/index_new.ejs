  <script>
    function display(num){
      if (num != "1") {
        var exam_file_list=document.querySelectorAll('#exam_file');
        var class_no_list=document.querySelectorAll('#class_no');
        for(var i=0;i<class_no_list.length;i++)
          class_no_list[i].value = "";
        for(var i=0;i<exam_file_list.length;i++)
          exam_file_list[i].value = "";
        document.getElementById('examStart').setAttribute("hidden", true);
        document.getElementById('examEnd').setAttribute("hidden", true);
      }
    }
    function display_ct() {
      var x = new Date()
      document.getElementById('datetime').innerHTML = x.toLocaleString();
      setTimeout('display_ct()', 1000);
    }
    if(document.getElementById('mes').innerHTML == 1) {
      click_class(document.getElementById('updateClass').innerHTML, 1);
      
    }
    function click_class(str, num) {
      var classExamInfo = document.getElementById('classExamInfo').innerHTML;
      classExamInfo = JSON.parse('{"' + classExamInfo.replace(/\-\-\-/g, '","').replace(/\+\+\+/g, '":"') + '"}');
      var exam_select_items = document.getElementById("exam_select");
      exam_select_items.innerHTML='';
      
      var str_temp = str.split('_')[0].split(' ')[0];
      var temp_list = document.getElementById('items').innerHTML.split('+++');
      var str_temp2 = "";
      let no_test = true;
      
      for(var i = 0;i<temp_list.length;i+=2){
        if(temp_list[i] == str_temp){
          str_temp2 += '<li><a style="font-size:3vh;width:40vh;text-align:center;" id="exam_'+temp_list[i+1]+'" name="exam_'+temp_list[i+1]+'" class="dropdown-item" onclick="click_exam('+"'"+temp_list[i+1]+"'"+')">'+temp_list[i+1]+'</a></li>';
          no_test = false;
        }
      }
      
      if (no_test) {
        alert("no test");
        display();
        document.getElementById('dropdownMenuButton1').innerHTML = "Please select your Class ID";
        document.getElementById('dropdownMenuButton2').innerHTML = "Please select your Exam";      
      } else {
        document.getElementById('class_no_name').innerHTML="&nbsp&nbsp&nbsp&nbspClass no:&nbsp&nbsp&nbsp&nbsp"+str;
        var class_no_list = document.querySelectorAll('#class_no');
        for(var i=0;i<class_no_list.length;i++)
          class_no_list[i].value = str;
        if (num == 0)
	  alert("class: "+str+", selected!!!"); 
	str_temp = "class_" + str;          
        document.getElementById(str_temp).classList.add('active');         
        var button_name = "class_" + document.getElementById('dropdownMenuButton1').innerHTML;
        if(document.getElementById(button_name))
          document.getElementById(button_name).classList.remove('active');  
	  
	         
        if(classExamInfo[str] == "null") {
          exam_select_items.innerHTML = str_temp2;
          alert("請選擇測驗開始考試!");
          document.getElementById('exam_select').style.removeProperty("display");
          document.getElementById('dropdownMenuButton2').innerHTML = "Please select your Exam";
          var exam_file_list=document.querySelectorAll('#exam_file');
          for(var i=0;i<exam_file_list.length;i++)
            exam_file_list[i].value = "";
          document.getElementById('examStart').removeAttribute("hidden");
          document.getElementById('examEnd').setAttribute("hidden", true);
          document.getElementById('dropdownMenuButton1').innerHTML = str;
        } else { 
          alert("目前測驗 " + classExamInfo[str] + " 進行中");
         
          document.getElementById('dropdownMenuButton1').innerHTML = str;
          document.getElementById('dropdownMenuButton2').innerHTML = classExamInfo[str];
          var exam_file_list=document.querySelectorAll('#exam_file');
          for(var i=0;i<exam_file_list.length;i++)
            exam_file_list[i].value = classExamInfo[str];
          document.getElementById('exam_select').style.display = "none";
          document.getElementById('examStart').setAttribute("hidden", true);
          document.getElementById('examEnd').removeAttribute("hidden");
        }
      }
    }
    
    
    
    function click_exam(str) {
      var str_temp = "exam_"+str;    
      document.getElementById(str_temp).classList.add('active');
      var button_name = "exam_"+document.getElementById('dropdownMenuButton2').innerHTML;
      if(document.getElementById(button_name)!=undefined)
      	document.getElementById(button_name).classList.remove('active');
      document.getElementById('dropdownMenuButton2').innerHTML=str;
      var exam_file_list=document.querySelectorAll('#exam_file');
      for(var i=0;i<exam_file_list.length;i++)
        exam_file_list[i].value=str;
      alert("exam: "+str+", selected!!!");
    }
    
    
    
